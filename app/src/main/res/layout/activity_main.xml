<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="0"
        android:cursorVisible="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="end"
        ></EditText>

    <TextView
        android:id="@+id/result_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:text="0.0"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="right"
        android:padding="10dp"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4"
        style="@style/linear_layout_style"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/e"
            android:textAllCaps="false"
            android:layout_weight="1"
            style="@style/button_style"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pi"
            android:textAllCaps="false"
            android:layout_weight="1"
            style="@style/button_style" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sin"
            android:textAllCaps="false"
            android:layout_weight="1"
            style="@style/button_style" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deg"
            android:textAllCaps="false"
            android:layout_weight="1"
            style="@style/button_style" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="1"
        style="@style/linear_layout_style"
        >
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_weight="1"
            android:backgroundTint="@color/full_light_red"
            android:textColor="@color/light_red"
            style="@style/bottom_button_style"
            android:onClick="backbButton"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:layout_weight="1"
            style="@style/bottom_button_style" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:layout_weight="1"
            style="@style/bottom_button_style" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            style="@style/bottom_button_style"
            android:onClick="division"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        style="@style/linear_layout_style"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button7"
            android:focusableInTouchMode="false"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button8"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button9"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            style="@style/bottom_button_style"
            android:onClick="multiply"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        style="@style/linear_layout_style"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button4"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button5"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button6"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            style="@style/bottom_button_style"
            android:onClick="subtraction"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        style="@style/linear_layout_style"
        android:layout_weight="1"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button2"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_weight="1"
            style="@style/bottom_button_style"
            android:onClick="button3"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            style="@style/bottom_button_style"
            android:onClick="addition"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        style="@style/linear_layout_style"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="2"
            style="@style/bottom_button_style2"
            android:onClick="zero"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_weight="1"
            style="@style/bottom_button_style2"
            android:onClick="point"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_weight="1"
            android:backgroundTint="@color/parrot"
            style="@style/bottom_button_style2"
            android:onClick="equal"
            />

    </LinearLayout>

</LinearLayout>